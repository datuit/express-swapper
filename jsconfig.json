{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@api/*": ["./api/*"],
      "@constants/*": ["./constants/*"],
      "@controllers/*": ["./controllers/*"],
      "@helpers/*": ["./helpers/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@models/*": ["./models/*"],
      "@services/*": ["./services/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
